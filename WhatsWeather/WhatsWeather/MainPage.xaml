<Page
    x:Class="WhatsWeather.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WhatsWeather"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
>

    <Grid Name="MyGrid" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        
        <Image Grid.Row="1" Name="ResultImage" Stretch="Uniform"  />
        <TextBlock Text="XX" HorizontalAlignment="Right" VerticalAlignment="Top"  Margin="0,0,50,0" FontSize="100" Name="ResultTemp" Grid.RowSpan="2" />
        <TextBlock Text="FRAN" Grid.Row="1" FontSize="50"                 
                   Name="ResultCity" Margin="30,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <TextBlock Grid.Row="2" Text="XXXXXXXXXXXXXXXXXXXXXXXXXXX" Name="ResultType" 
                   FontSize="140" Margin="50,0,0,0" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Bottom"></TextBlock>


    </Grid>

</Page>
